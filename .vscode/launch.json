{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CMake Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": ["res\\fib.lox"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,

      // Linux / macOS
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",

      // Windows (uncomment if needed)
      // "MIMode": "gdb",
      // "miDebuggerPath": "C:/mingw64/bin/gdb.exe",

      // Optional: specify build directory if not default
      "preLaunchTask": "CMake: build"
    }
  ]
}
